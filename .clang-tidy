Checks: '-*,
portability-*,
# readability-*,
performance-*,
# clang-analyzer-*,
# cppcoreguidelines-*, 
bugprone-*, 
modernize-*,
    -modernize-use-trailing-return-type,
    -modernize-avoid-c-arrays,
    -modernize-use-using,
    -modernize-use-default-member-init,
'
HeaderFilterRegex: 'src/.*|test/.*'
WarningsAsErrors: '*'
ExtraArgs: - -Wno-unknown-pragmas # TODO: remove this after switch to clang-tidy-18
